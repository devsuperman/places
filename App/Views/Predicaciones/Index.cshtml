@model List<Predicacion>
@{
    ViewData["Title"] = "Predicaciones";
}

<div class="d-flex">

    <h1 class='flex-grow-1'>
        <i class="bi bi-coin"></i>
        @ViewData["Title"]
    </h1>

    <div>
        <a class="btn btn-primary" asp-action="Anadir">
            <i class="bi bi-plus"></i> Añadir
        </a>
    </div>

</div>
<hr>

<form class="row mb-4">

    <div class="mb-2 col-md-4">
        <select name="territorioId" asp-items='@(SelectList)ViewData["selectTerritorios"]' class="form-select">
            <option value="">Territórios</option>
        </select>
    </div>

    <div class="mb-2 col-md-8">

        <div class="d-flex">

            <div class="flex-grow-1">
                <input type="month" name="mesAno" value='@ViewData["mesAno"]' class="form-control">
            </div>

            <div>
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i>
                    Consultar
                </button>
            </div>
        </div>

    </div>

</form>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a class="list-group-item list-group-item-action d-flex" asp-action="Editar" asp-route-id="@item.Id">
            <span class='flex-grow-1'>
                @item.Fecha.ToShortDateString() - @item.Territorio.Nombre
            </span>
            <span>
                @item.Manzanas - @item.Observacion
            </span>
        </a>
    }
</div>